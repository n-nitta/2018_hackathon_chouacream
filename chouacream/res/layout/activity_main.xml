<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.couacream.MainActivity" >

    <TextView 
        android:id="@+id/txtTitle1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="甲南大学知能情報学部\n履修マニュアル"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/txtTitle1"
        android:layout_alignLeft="@+id/txtTitle1"
        android:layout_alignStart="@+id/txtTitle1"
        android:layout_marginBottom="18dp"
        android:textSize="12dp"
        android:text="履修テンプレート" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/txtTitle1"
        android:layout_alignEnd="@+id/txtTitle1"
        android:layout_alignRight="@id/txtTitle1"
        android:layout_marginBottom="16dp"
        android:textSize="12dp"
        android:text="授業一覧" />

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="330dp"
        android:layout_height="250dp"
        android:layout_alignLeft="@id/txtTitle1"
        android:layout_centerVertical="true"
        android:src="@+drawable/pic13" 
        />

</RelativeLayout>
